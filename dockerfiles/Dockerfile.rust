ARG BASE_IMAGE=alpine:3.18.3

FROM ${BASE_IMAGE}

ARG RUST_VERSION=1.71.1
ARG TARGET_ARCH=aarch64-unknown-linux-musl
ARG SQLX_VERSION=

RUN apk update --no-cache && apk add \
    bash \
    bind-tools \
    bsd-compat-headers \
    build-base \
    curl \
    findutils \
    git \
    iputils \
    jq \
    libev \
    libffi-dev \
    libssh \
    libssh-dev \
    libtool \
    linux-headers \
    lsof \
    m4 \
    make \
    moreutils \
    musl-dev \
    openssl-dev \
    patch \
    pkgconfig \
    sudo \
    texinfo \
    tzdata

WORKDIR /opt/dev-tools

COPY ./configure ./configure
COPY ./ctxes ./ctxes
COPY ./examples ./examples
COPY ./render ./render
COPY ./templates ./templates
COPY ./toolchain ./toolchain 

COPY ./lib.mk ./lib.mk
COPY ./Makefile ./Makefile

RUN cd ./toolchain && make distclean && ./configure --with-python && make python

RUN make configure \
        BUILD_PROFILE=${BUILD_PROFILE} \
        BUILD_VERSION=${BUILD_VERSION} \
        TARGET_ARCH=${TARGET_ARCH} \
        OS=alpine \
        rustup__CRATES=sqlx-cli__0.7.1

RUN make -f .output/rust/rustup.mk all

RUN make -f .output/postgresql/postgresql.mk install
